<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="#FFF3E0" />
            <stroke android:width="5px" android:color="#0000ff" android:dashGap="3dp" android:dashWidth="3dp" />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke android:width="5px" android:color="#FFD54F" android:dashGap="5dp" android:dashWidth="5dp" />
        </shape>
    </item>

</selector>